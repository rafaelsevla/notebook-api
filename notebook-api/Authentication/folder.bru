meta {
  name: Authentication
}

auth {
  mode: inherit
}

script:post-response {
  const access_token = res.getHeader('access-token')
  const client = res.getHeader('client')
  const uid = res.getHeader('uid')
  
  bru.setEnvVar("ACCESS_TOKEN", access_token)
  bru.setEnvVar("CLIENT", client)
  bru.setEnvVar("UID", uid)
  
}
